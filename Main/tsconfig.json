{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"]      // ⬅️ penting untuk import { auth } from "@lib/auth"
    },

    "plugins": [{ "name": "next" }],
    "incremental": true,
    "resolveJsonModule": true,

    // (opsional, tapi membantu VSCode kenali tipe session.role)
    "types": ["next-auth", "./src/types/next-auth"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "src/middleware.ts"
  ],
  "exclude": ["node_modules"]
}
